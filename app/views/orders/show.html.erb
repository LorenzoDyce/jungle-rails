<section class="orders-show">

  <header class="page-header">
    <h1>Order # <%= @order.id %></h1>
  </header>
  <h2> Thank you <%@order.email%>, your order summary is below.</h2>

  <div class="order-summary jumbotron">
  <% @order.line_items.each do |line_item| %>
  <tr>
  <td>
  <%= image_tag line_item.product.image.tiny%>
  </td>
  <td>
    <h4><%= line_item.product.name %></h4>
    <br>
    <p><%= line_item.product.description %></p>
    </td>
    <td> Quantity =
    <%= line_item.quantity%>
    </td>
    <td> Total =
    <%= humanized_money_with_symbol line_item.quantity * line_item.product.price%>
    </td>
    </tr>
    <% end %>
  </div>
</section>
